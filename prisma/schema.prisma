generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SquozeResponse {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  httpStatusCode Int
  header         String?
  errorMessage   String?
}

model Job {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String   @unique
  description    String?
  command        String
  cronExpression String
  active         Boolean
}

enum CommandRunStatus {
  UNKNOWN
  ERROR
  SUCCESS
}

enum CommandRunSrc {
  UNKNOWN
  CONSOLE
  DISCORD
  JOB
}

model CommandRun {
  id            Int              @id @default(autoincrement())
  startedAt     DateTime
  endedAt       DateTime
  src           CommandRunSrc
  status        CommandRunStatus
  command       String
  gitCommitHash String
  stdout        String
  stderr        String
  exitCode      Int
}
